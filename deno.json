{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"],
      "strict": true
    },
    "importMap": "import_map.json",
    "lint": {
      "files": {
        "include": [
          "src/",
          "tests/"
        ]
      },
      "rules": {
        "tags": ["recommended"],
        "include": ["ban-untagged-todo"],
        "exclude": ["no-unused-vars"]
      }
    },
    "fmt": {
      "files": {
        "include": [
          "src/",
          "tests/"
        ]
      },
      "options": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "singleQuote": true,
        "proseWrap": "preserve"
      }
    },
    "test": {
      "files": {
        "include": ["tests/"]
      }
    }
  }